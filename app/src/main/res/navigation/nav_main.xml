<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.uts.homelab.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.uts.homelab.view.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_nav_user"
            app:destination="@id/nav_user" />
        <action
            android:id="@+id/action_registerFragment_to_nav_nurse"
            app:destination="@id/nav_nurse" />
        <action
            android:id="@+id/action_registerFragment_to_nav_admin"
            app:destination="@id/nav_admin" />
    </fragment>
    <include app:graph="@navigation/nav_user" />
    <include app:graph="@navigation/nav_nurse" />
    <include app:graph="@navigation/nav_admin" />
</navigation>