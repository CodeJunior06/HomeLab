<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.nurse.NurseDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="70dp"
            android:text="Â¡Digite y seleccione su lugar de redidencia para finalizar!"
            android:textAlignment="center"
            android:textStyle="bold" />



            <LinearLayout
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/edit_text_round"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="15dp"
                    android:hint="Descripcion Direccion"
                    android:inputType="text"
                    android:nextFocusForward="@id/sp_typeDocument"
                    android:paddingHorizontal="15dp"
                    android:textColorHint="@color/black" />

            </LinearLayout>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.NurseActivity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                app:icon="@drawable/ic_save"
                android:paddingVertical="10dp"
                app:iconTint="@color/white"
                android:enabled="false"
                app:iconGravity="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/blue_alianza"
                android:text="GUARDAR"
                android:paddingHorizontal="10dp"
                app:cornerRadius="16dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>