<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_hospital"
    android:layout_height="match_parent"
    tools:context=".view.fragment.admin.SearchNurseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="PQRS"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@drawable/only_corner_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    app:cardElevation="5dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/blue_hospital"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/men_user" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNurse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    app:cardElevation="5dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/blue_hospital"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nurse_men" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <androidx.cardview.widget.CardView

                    android:id="@+id/itemProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    app:cardElevation="5dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/blue_hospital"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="7dp"
                        android:text="Problema"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemImprovement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    app:cardElevation="5dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/blue_hospital"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="7dp"
                        android:text="Mejoras"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemProblemAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    app:cardElevation="5dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/blue_hospital"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="7dp"
                        android:text="Problemas Citas"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCommentType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>