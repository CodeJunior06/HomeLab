<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.user.UserDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Santiago Rueda"
                android:textColor="@color/blue_alianza"
                android:textSize="45sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Â¡Complete los datos por favor!"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/nameUser" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Seleccione el genero"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardNurseWomen"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:backgroundTint="#67A9C8"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/women_user" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNurseMen"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:backgroundTint="#67A9C8"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/men_user" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp_typeDocument"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="6.5"
                        android:background="@drawable/edit_text_round"
                        android:drawablePadding="15dp"
                        android:nextFocusLeft="@id/et_numberDocument"
                        android:nextFocusDown="@id/et_email"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:drawableStart="@drawable/ic_phone"
                        android:id="@+id/et_numberDocument"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:layout_weight="3.5"
                        android:background="@drawable/edit_text_round"
                        android:hint="Numero documento"
                        android:inputType="number"
                        android:maxLines="1"
                        android:nextFocusDown="@id/et_email"
                        android:paddingHorizontal="15dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_age"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="6.5"
                        android:background="@drawable/edit_text_round"
                        android:drawablePadding="15dp"
                        android:hint="Edad"
                        android:nextFocusLeft="@id/et_numberDocument"
                        android:nextFocusDown="@id/et_email"
                        android:paddingHorizontal="15dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/black" />


                    <TextView
                        android:id="@+id/et_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="5"
                        android:background="@drawable/edit_text_round"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="Fecha nacimiento"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/et_telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:drawableTint="@color/black"
                        android:background="@drawable/edit_text_round"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="15dp"
                        android:hint="Telefono"
                        android:inputType="text"
                        android:nextFocusDown="@id/et_lastName"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccione su IPS" />


                    <Spinner
                        android:id="@+id/sp_typeIPS"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="6.5"
                        android:background="@drawable/edit_text_round"
                        android:drawablePadding="15dp"
                        android:nextFocusLeft="@id/et_numberDocument"
                        android:nextFocusDown="@id/et_email"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />


                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No has seleccionado una direccion"/>

                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="Seleccionar Ubicacion"
                        />

                </LinearLayout>-->


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnRegresar"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Cancelar"
                        android:textColor="@color/blue_hospital"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="5"
                        android:backgroundTint="@color/blue_hospital"
                        android:text="Siguiente"
                        android:textSize="17sp"
                        app:cornerRadius="22dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>