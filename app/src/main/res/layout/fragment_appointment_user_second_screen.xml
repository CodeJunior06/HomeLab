<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.user.appointment.AppointmentUserSecondScreenFragment">

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="16dp"
        android:src="@drawable/home_lab_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/blue_marine"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_view"
        tools:text="Agendar cita" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/btnAddAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home">

        <EditText
            android:id="@+id/et_eps"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:background="@drawable/edit_text_round"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:hint="EPS"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/et_telefono"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:background="@drawable/edit_text_round"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:hint="Telefono"
            android:inputType="number"
            android:paddingHorizontal="15dp"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/tv_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="15dp"
            android:text="Selecciona la fecha y la hora que deseas tener la cita" />

        <TextView
            android:id="@+id/tv_time_selected"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:drawablePadding="15dp"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_round"
            android:paddingHorizontal="15dp"
            android:text="2023-8-13 11:23" />

        <EditText
            android:id="@+id/et_descriÃ§ion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edit_text_round"
            android:drawableStart="@drawable/ic_person"
            android:lines="5"
            android:drawablePadding="15dp"
            android:hint="Comentarios y sugerencias"
            android:layout_gravity="center|top"
            android:inputType="textMultiLine"
            android:paddingHorizontal="15dp"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Agendar cita"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>