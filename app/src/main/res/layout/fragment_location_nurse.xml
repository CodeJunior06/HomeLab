<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_hospital"
    android:layout_height="match_parent"
    tools:context=".view.fragment.admin.LocationNurseFragment"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="GeolocalizaciÃ³n"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/only_corner_top"
        android:orientation="vertical">





        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.NurseActivity" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <EditText
                android:layout_weight="5"
                android:id="@+id/et_nameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_round"
                android:drawableStart="@drawable/ic_nurse"
                android:drawablePadding="5dp"
                android:enabled="false"
                android:hint="Santiago R"
                android:inputType="text"
                android:nextFocusForward="@id/sp_typeDocument"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/black" />
            <EditText
                android:id="@+id/et_nameNurse"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_round"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="5dp"
                android:enabled="false"
                android:hint="Alfredo R"
                android:inputType="text"
                android:nextFocusForward="@id/sp_typeDocument"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/black" />

        </LinearLayout>
        <LinearLayout

            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_phone"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@drawable/edit_text_round"
                android:drawableTint="@color/blue_alianza"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="15dp"
                android:hint="Sanitas"
                android:inputType="text"
                android:nextFocusForward="@id/sp_typeDocument"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:drawableTint="@color/blue_alianza"
                android:background="@drawable/edit_text_round"
                android:drawableStart="@drawable/ic_address"
                android:textSize="15sp"
                android:drawablePadding="15dp"
                android:hint="Cl. 3 AN #8-145, Piedecuesta, Santander"
                android:inputType="text"
                android:nextFocusForward="@id/sp_typeDocument"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/black" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>