<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.nurse.NurseDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E n f e r m e r o"
                android:textAllCaps="true"
                android:textColor="@color/blue_alianza"
                android:textSize="45sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nameNurse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NAME NURSE"
                android:textColor="@color/gray"
                android:textSize="35sp"
                android:textStyle="bold" />

            <!-- TODO: Update blank fragment layout -->

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Â¡Complete los datos por favor!"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_date_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="5"
                        android:background="@drawable/edit_text_round"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="Fecha nacimiento"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:id="@+id/et_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginStart="5dp"
                        android:paddingVertical="13dp"
                        android:background="@drawable/edit_text_round"
                        android:hint="Experiencia"
                        android:inputType="number"
                        android:maxLines="1"
                        android:nextFocusDown="@id/et_email"
                        android:paddingHorizontal="15dp"
                        android:textColorHint="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:background="@drawable/edit_text_round"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="15dp"
                    android:hint="Direccion"
                    android:inputType="text"
                    android:nextFocusForward="@id/sp_typeDocument"
                    android:paddingHorizontal="15dp"
                    android:textColorHint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_idVehicule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:background="@drawable/edit_text_round"
                    android:drawableStart="@drawable/ic_placa_moto"
                    android:drawablePadding="15dp"
                    android:hint="Placa de la moto"
                    android:inputType="text"
                    android:nextFocusForward="@id/sp_typeDocument"
                    android:paddingHorizontal="15dp"
                    android:textColorHint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:drawableTint="@color/black"
                    android:background="@drawable/edit_text_round"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="15dp"
                    android:hint="Numero de celular"
                    android:inputType="text"
                    android:nextFocusForward="@id/sp_typeDocument"
                    android:paddingHorizontal="15dp"
                    android:textColorHint="@color/black" />

            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.NurseActivity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                app:icon="@drawable/ic_save"
                app:iconTint="@color/white"
                android:enabled="false"
                android:paddingVertical="10dp"
                app:iconGravity="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/blue_hospital"
                android:text="GUARDAR"
                app:cornerRadius="10dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>